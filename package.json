{
    "name": "cas-fee-projekt-1-starter-template",
    "version": "1.0.0",
    "description": "Testat template",
    "main": "public/scripts/main.js",
    "type": "module",
    "scripts": {
        "start-chrome-dev": "start chrome http://localhost:8080",
        "start-webpack-dev": "webpack serve --config webpack.config.cjs --mode development",
        "frontend-dev": "npm run start-chrome-dev && npm run start-webpack-dev",
        "backend-dev": "nodemon server.js",
        "start-chrome-prod": "start chrome http://localhost:3000",
        "start-webpack-prod": "webpack --mode production",
        "start-node-prod": "node server.js",
        "start": "npm run start-chrome-prod && npm run start-webpack-prod && npm run start-node-prod",
        "unit": "karma start karma.conf.cjs ",
        "test": "npm run unit",
        "stylelint": "stylelint \"**/*.css\"",
        "w3c": "html-validator --file ./index.html  --verbose",
        "eslint": "eslint ./**/*.js ./**/*.mjs",
        "all": "npm run stylelint && npm run w3c  && npm run eslint  && node -e \"console.log('npm run all completed')\""
    },
    "author": "Michael Gfeller",
    "license": "ISC",
    "devDependencies": {
        "babel-eslint": "^10.1.0",
        "cors": "^2.8.5",
        "css-loader": "^5.2.6",
        "eslint": "^7.21.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-plugin-import": "^2.22.1",
        "express-favicon": "^2.0.1",
        "html-validator-cli": "^7.0.1",
        "jasmine-core": "^3.7.1",
        "karma": "^6.3.3",
        "karma-chrome-launcher": "^3.1.0",
        "karma-coverage": "^2.0.3",
        "karma-jasmine": "^4.0.1",
        "karma-webpack": "^5.0.0",
        "path": "^0.12.7",
        "script-loader": "^0.7.2",
        "style-loader": "^2.0.0",
        "stylelint": "^13.12.0",
        "stylelint-config-standard": "^21.0.0",
        "url": "^0.11.0",
        "webpack": "^5.38.1",
        "webpack-cli": "^4.7.0",
        "webpack-dev-server": "^3.11.2"
    },
    "dependencies": {
        "express": "^4.17.1",
        "handlebars": "^4.7.7",
        "lodash.clonedeep": "^4.5.0"
    }
}
